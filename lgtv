#!/bin/bash

# LG TV Control Script
# Main script to control LG 65NANO81 TV

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
TV_IP="10.0.0.61"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Function to display usage
usage() {
    echo "LG TV Control"
    echo "Usage: $0 [on|off|status|input <source>]"
    echo ""
    echo "Commands:"
    echo "  on              - Turn the TV on using Wake-on-LAN"
    echo "  off             - Turn the TV off"
    echo "  status          - Check if TV is reachable"
    echo "  input <source>  - Switch to input source"
    echo ""
    echo "Input sources:"
    echo "  HDMI: hdmi1, hdmi2, hdmi3, hdmi4"
    echo "  TV:   tv"
    echo "  Apps: netflix, youtube, amazon, disney, apple, hbo, spotify, browser"
    echo ""
    echo "TV IP: $TV_IP"
    exit 1
}

# Function to check TV status
check_status() {
    echo "Checking TV status..."
    
    # Try to ping the TV
    if ping -c 1 -W 2 "$TV_IP" >/dev/null 2>&1; then
        echo -e "${GREEN}✓${NC} TV is reachable at $TV_IP"
        
        # Check if webOS API port is open
        if nc -z -w2 "$TV_IP" 3000 2>/dev/null; then
            echo -e "${GREEN}✓${NC} webOS API is accessible (TV is ON)"
            return 0
        else
            echo -e "${YELLOW}!${NC} TV responds to ping but webOS API is not accessible"
            echo "  The TV might be in standby mode or LG Connect Apps is disabled"
            return 1
        fi
    else
        echo -e "${RED}✗${NC} TV is not reachable (OFF or not connected to network)"
        return 2
    fi
}

# Main logic
case "$1" in
    on)
        echo -e "${GREEN}Turning TV ON...${NC}"
        node "$SCRIPT_DIR/tv_on_node.js"
        ;;
    off)
        echo -e "${RED}Turning TV OFF...${NC}"
        node "$SCRIPT_DIR/tv_simple.js" off
        ;;
    status)
        check_status
        ;;
    input)
        if [ -z "$2" ]; then
            echo "Error: Please specify an input source"
            echo ""
            usage
        fi
        "$SCRIPT_DIR/tv_input.sh" "$2"
        ;;
    *)
        usage
        ;;
esac